{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Read(~/.zshrc)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "Bash(git add:*)",
      "Bash(git commit -m \"$\\(cat <<''EOF''\nfix\\(plugin\\): prevent use-after-free on OBS shutdown\n\nMake settings dialog non-modal to allow OBS to close from taskbar,\nand fix the resulting race condition:\n\n- Use show\\(\\) instead of exec\\(\\) for non-blocking dialog\n- Track dialog with static pointer, reuse if already open\n- Remove obs_output_release from OBS_FRONTEND_EVENT_EXIT handler\n  \\(obs_output_stop is async, release was freeing memory while\n  audio callbacks still running\\)\n- Let frontend_cleanup\\(\\) handle release during obs_module_unload\n  \\(after audio system is fully stopped\\)\n\nThis fixes the c0000005 access violation crash when closing OBS\nwhile the UDP audio output is active.\nEOF\n\\)\")",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cmake --build:*)",
      "Bash(objdump:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/enforce-safe-commit.py"
          },
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/enforce-safe-destroy.py"
          },
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/enforce-branch-prefix.py"
          },
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/enforce-gitops-kubectl.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/protect-files.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/claude-skills-go/inject-style.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/auto-format.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/claude-skills-go/post-validate.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-context.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/project-detect.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/skill-activation-prompt.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/tmux-notify.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/skill-unload.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[32m%s@%s\\033[0m:\\033[34m%s\\033[0m' \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\""
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "playwright-skill@playwright-skill": true,
    "ralph-loop@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754078382179
  }
}
